@model List<CokluAdisyon.Models.Urun>
@{
    ViewBag.Title = "urunFiyatlari";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <h1>
        Ürünler
        <small>
            <i class="ace-icon fa fa-angle-double-right"></i>
            Fiyatları Güncelle
        </small>
    </h1>
</div><!-- /.page-header -->


<div class="row">
    <div class="container">
        <!-- PAGE CONTENT BEGINS -->

        <div class="widget-body">
            <div class="widget-main">
                <div class="col-xs-12">

                    <div class="widget-box">
                        <div class="widget-header widget-header-flat widget-header-small">
                            <h5 class="widget-title">
                                <i class="ace-icon fa fa-shopping-cart"></i>
                                Ürün Fiyatları
                            </h5>
                        </div>
                        <div class="widget-body">
                            <div class="widget-main">

                                <table class="table table-striped table-bordered">
                                    <thead class="thin-border-bottom">
                                        <tr>
                                            <th class="text-center">#</th>

                                            <th class="text-center">Ürün Grubu</th>

                                            <th class="text-center">
                                                <i class="ace-icon fa fa-caret-right blue"></i>Ürün Adı
                                            </th>

                                            <th class="text-center">
                                                <i class="ace-icon fa fa-caret-right blue"></i>Ürün Fiyatı
                                            </th>

                                            <th class="text-center">
                                                <i class="ace-icon fa fa-caret-right blue"></i>Yeni Ürün Fiyatı
                                            </th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                        @{ int syc = 1;}
                                        @foreach (var item_urunler in Model)
                                        {
                                            <tr>
                                                <td class="text-center">@syc</td>
                                                <td class="text-center">@item_urunler.UrunGruplari.Adi</td>
                                                <td class="text-center">@item_urunler.UrunAdi</td>
                                                <td class="text-center">@item_urunler.UrunFiyati<img src="~/Content/tl.png" width="7" /></td>
                                                <td class="text-center">
                                                    <form method="post" action="/Adisyon/fiyatGuncelle">
                                                        <input type="hidden" name="urunID" value="@item_urunler.UrunID" />
                                                        <input type="text" name="urunFiyati" />
                                                        <button type="submit" class="btn btn-minier btn-success"><i class="fa fa-check"></i></button>
                                                    </form>
                                                </td>
                                            </tr>
                                            syc++;
                                        }
                                    </tbody>
                                </table>

                            </div>
                        </div>

                    </div>
                </div>


            </div><!-- /.col -->
        </div><!-- /.row -->
    </div>
</div>
